<%- include('partials/header') %>

<section class="min-h-screen flex items-center justify-center bg-[#171717]/10 backdrop-blur-3xl px-4">
  <div class="w-full max-w-md p-8 bg-white/90 shadow-xl rounded-2xl">
    <h2 class="text-3xl font-bold text-center text-[#028794] mb-6">Smart Learning Hub</h2>
    <p class="text-center text-gray-600 pb-4">Login to your personalized learning space</p>

    <form id="loginForm" action="/login" method="POST" class="space-y-5">
      <div>
        <label class="block mb-1 font-medium text-gray-700">Email</label>
        <input 
          type="email" 
          name="email" 
          required 
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#028794]" />
      </div>

      <div>
        <label class="block mb-1 font-medium text-gray-700">Password</label>
        <input 
          type="password" 
          name="password" 
          required 
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#028794]" />
      </div>

      <button 
        id="submitBtn"
        type="submit" 
        class="w-full bg-[#028794] text-white py-2 rounded-lg hover:bg-[#026e7a] transition">
        Login
      </button>

      <!-- Loader -->
      <div id="loader" class="hidden flex justify-center mt-4">
        <div class="w-6 h-6 border-4 border-[#028794] border-t-transparent rounded-full animate-spin"></div>
      </div>
    </form>

    <p class="text-sm text-center text-gray-500 mt-4">
      Donâ€™t have an account?
      <a href="/register" class="text-[#028794] hover:underline">Register</a>
    </p>
  </div>
</section>

<script>
  const form = document.getElementById('loginForm');
  const loader = document.getElementById('loader');
  const submitBtn = document.getElementById('submitBtn');

  form.addEventListener('submit', () => {
    loader.classList.remove('hidden');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Logging in...';
  });
</script>

