<%- include('../partials/header') %>
<div class="max-w-3xl mx-auto mt-10 bg-[#028794] p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-6">Update Profile</h1>

    <form action="/profile" method="POST" class="space-y-4">
      <!-- Name -->
      <div>
        <label class="block mb-1">Name</label>
        <input type="text" name="name" value="<%= user.name %>" 
               class="w-full px-4 py-2 rounded bg-gray-950 border border-gray-600 focus:outline-none">
      </div>

      <!-- Email -->
      <div>
        <label class="block mb-1">Email</label>
        <input type="email" name="email" value="<%= user.email %>" 
               class="w-full px-4 py-2 rounded bg-gray-950 border border-gray-600 focus:outline-none">
      </div>

      <!-- Password -->
      <div>
        <label class="block mb-1">New Password (leave blank to keep current)</label>
        <input type="password" name="password" placeholder="Enter new password" 
               class="w-full px-4 py-2 rounded bg-gray-950 border border-gray-600 focus:outline-none">
      </div>

      <!-- Buttons -->
      <div class="flex justify-between items-center">
        <a href="/dashboard" class="text-gray-400 hover:text-white">‚Üê Back to Dashboard</a>
        <button type="submit" 
                class="bg-blue-600 px-4 py-2 rounded-lg hover:bg-blue-700 transition">
          Save Changes
        </button>
      </div>
    </form>
  </div>
  
<%- include('../partials/footer') %>
