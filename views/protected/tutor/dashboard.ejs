<%- include('../../partials/header') %>

<body class="bg-gradient-to-r from-gray-900 via-gray-800 to-[#028794] text-gray-100 font-sans">

  <div class="flex h-screen flex-col md:flex-row">

    <!-- Sidebar -->
    <aside id="sidebar" class="w-full md:w-64 bg-gray-900 text-gray-200 p-4 space-y-4 shadow-lg transition-all duration-300">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-2">
          <i class="fas fa-video text-[#028794] text-2xl"></i>
          <h1 class="text-xl font-bold">Tutor Dashboard</h1>
        </div>
        <button id="sidebarToggle" class="md:hidden text-gray-400 hover:text-white focus:outline-none">
          <i class="fas fa-bars text-xl"></i>
        </button>
      </div>

      <nav class="mt-8 flex flex-col space-y-2">
        <a href="/tutor/dashboard" class="flex items-center p-3 rounded-lg hover:bg-gray-700 transition duration-200">
          <i class="fas fa-home mr-2"></i> Home
        </a>
        <a href="/tutor/videos" class="flex items-center p-3 rounded-lg hover:bg-gray-700 transition duration-200">
          <i class="fas fa-video mr-2"></i> My Videos
        </a>
        <a href="/tutor/videos/upload" class="flex items-center p-3 rounded-lg hover:bg-gray-700 transition duration-200">
          <i class="fas fa-plus mr-2"></i> Upload Video
        </a>
        <a href="/profile" class="flex items-center p-3 rounded-lg hover:bg-gray-700 transition duration-200">
          <i class="fas fa-user mr-2"></i> Profile
        </a>
      </nav>
    </aside>

    <!-- Main content -->
    <main class="flex-1 p-6 overflow-y-auto">

      <!-- Header -->
      <header class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-semibold">Dashboard Overview</h2>
        <div class="flex items-center space-x-4">
          <input type="text" placeholder="Search videos..." id="searchInput"
                 class="p-2 border border-gray-600 bg-gray-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#028794]">
          <div class="relative">
            <img src="https://ui-avatars.com/api/?name=<%= user.name %>&background=028794&color=fff"
                 alt="User Avatar" class="rounded-full w-10 h-10 border-2 border-gray-700 shadow-lg">
            <span class="absolute bottom-0 right-0 h-3 w-3 bg-green-500 rounded-full border-2 border-gray-900"></span>
          </div>
        </div>
      </header>

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-gray-800 rounded-xl shadow-lg p-6 flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Total Videos</p>
            <h3 class="text-2xl font-bold"><%= stats.totalVideos %></h3>
          </div>
          <div class="bg-[#028794] p-3 rounded-full">
            <i class="fas fa-video text-xl"></i>
          </div>
        </div>
        <div class="bg-gray-800 rounded-xl shadow-lg p-6 flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Subscribers</p>
            <h3 class="text-2xl font-bold">0</h3>
          </div>
          <div class="bg-green-600 p-3 rounded-full">
            <i class="fas fa-user-friends text-xl"></i>
          </div>
        </div>
        <div class="bg-gray-800 rounded-xl shadow-lg p-6 flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Total Views</p>
            <h3 class="text-2xl font-bold"><%= stats.totalViews %></h3>
          </div>
          <div class="bg-yellow-600 p-3 rounded-full">
            <i class="fas fa-eye text-xl"></i>
          </div>
        </div>
        <div class="bg-gray-800 rounded-xl shadow-lg p-6 flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm">Likes</p>
            <h3 class="text-2xl font-bold"><%= stats.totalLikes %></h3>
          </div>
          <div class="bg-purple-600 p-3 rounded-full">
            <i class="fas fa-thumbs-up text-xl"></i>
          </div>
        </div>
      </div>

      <!-- Content Section -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <!-- Chart & Videos -->
        <div class="lg:col-span-2 space-y-6">

          <!-- Chart -->
          <div class="bg-gray-800 rounded-xl shadow-lg p-6">
            <h3 class="text-xl font-semibold mb-4">Video Engagement</h3>
            <canvas id="engagementChart"></canvas>
          </div>

          <!-- Recent Videos -->
          <div class="bg-gray-800 rounded-xl shadow-lg p-6">
            <h3 class="text-xl font-semibold mb-4">Your Recent Videos</h3>
            <% if (videos.length === 0) { %>
              <p class="text-gray-400 text-sm">You havenâ€™t uploaded any videos yet.</p>
            <% } else { %>
              <ul id="videoList" class="space-y-3">
                <% videos.forEach(video => { %>
                  <li class="p-3 bg-gray-700 rounded-lg flex justify-between items-center group relative video-item">
                    <span><%= video.title %></span>
                    <div class="flex space-x-2 opacity-0 group-hover:opacity-100 transition">
                      <a href="/videos/<%= video._id %>" class="text-[#028794] hover:underline">View</a>
                      <form action="/videos/<%= video._id %>/like" method="POST">
                        <button type="submit" class="text-gray-300 hover:text-white flex items-center space-x-1">
                          <i class="fas fa-thumbs-up"></i>
                          <span><%= video.likes.length %></span>
                        </button>
                      </form>
                    </div>
                  </li>
                <% }) %>
              </ul>
            <% } %>
          </div>
        </div>

        <!-- Activities -->
        <div class="bg-gray-800 rounded-xl shadow-lg p-6">
          <h3 class="text-xl font-semibold mb-4">Recent Activities</h3>
          <% if (activities.length === 0) { %>
            <p class="text-gray-400 text-sm">No recent activities.</p>
          <% } else { %>
            <ul class="space-y-4">
              <% activities.forEach(activity => { %>
                <li class="flex items-start">
                  <span class="h-2 w-2 bg-[#028794] rounded-full mt-2 mr-3"></span>
                  <p class="text-sm"><%= activity %></p>
                </li>
              <% }) %>
            </ul>
          <% } %>
        </div>
      </div>
    </main>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

  <!-- Search Filter -->
  <script>
    const searchInput = document.getElementById('searchInput');
    searchInput.addEventListener('input', e => {
      const query = e.target.value.toLowerCase();
      document.querySelectorAll('.video-item').forEach(item => {
        const title = item.querySelector('span').textContent.toLowerCase();
        item.style.display = title.includes(query) ? 'flex' : 'none';
      });
    });
  </script>

  <!-- Chart.js Dynamic Data -->
 
</body>
